<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:ListMasterApp" 
             x:Class="ListMasterApp.MainPage">
    
    <StackLayout>
        
        <!-- Place new controls here -->

        <Label Text="Nossa Lista!" 
               FontSize="40"
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"/>
        
        <Entry Placeholder="Digite aqui..."
               x:Name="valor_digitado"/>
        
        <Button Text="Adicionar do Campo"
                FontSize="30"
                TextColor="Lime"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Margin="20, 10, 20, 20"
                BackgroundColor="Olive"
                Clicked="Handle_Clicked"/>
                
        <Button Text="Adicionar Item"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="AddItem"/>
        
        <Button Text="Checar Lista"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="Checando"/>
        
    </StackLayout>
    
</ContentPage>